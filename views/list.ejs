<%- include("header") -%> 

        <div class="box" id="heading">
            <h1><%= listTitle %></h1>
        </div>


            <div class="box">
                <% listOfItem.forEach(function(item){ %>
               <form action="/delete" method="POST">
                    <div class="item">
                        <input type="checkbox" name="checkbox" onChange="this.form.submit()" value=<%= item._id %> >
                        <input type="hidden" name="listName" value = <%= listTitle %>>
                        <p><%= item.name %></p>
                    </div>   
                </form>

                <% });%>

                <form class="item" action="/" method="POST">
                    <input type="text" name="listItem" placeholder="New Item" autocomplete="off">
                     <button type="submit" name="button" value = <%= listTitle %>>+</button>
                </form>
            </div>

 <%- include("footer") -%> 
